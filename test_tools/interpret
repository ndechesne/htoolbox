# Parameters:
#   1: a short name

# Export the complete name

case $1 in
  "as" )
    export NAME="asyncwriter"
    ;;
  "cf" )
    export NAME="configuration"
    ;;
  "cp" )
    export NAME="copier"
    ;;
  "fl" )
    export NAME="files"
    ;;
  "frw" )
    export NAME="filereaderwriter"
    ;;
  "hh" )
    export NAME="hasher"
    ;;
  "is" )
    export NAME="inet_socket"
    ;;
  "lr" )
    export NAME="linereader"
    ;;
  "ob" )
    export NAME="observer"
    ;;
  "rp" )
    export NAME="report"
    ;;
  "tlv" )
    export NAME="tlv"
    ;;
  "us" )
    export NAME="unix_socket"
    ;;
  "ws" )
    export NAME="work_scheduler"
    ;;
  "wse" )
    export NAME="work_scheduler_extensive"
    ;;
  "zu" )
    export NAME="zip_unzip"
    ;;
  * )
    export NAME="$1"
    ;;
esac

DIR=$WHERE/..
