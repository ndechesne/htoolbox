    ;;
  "dt" )
    export DIR="lib"
    export NAME="data"
    ;;
  "db" )
    export DIR="lib"
    export NAME="db"
    ;;
  "fl" )
    export DIR="base"
    export NAME="files"
    ;;
  "frw" )
    export DIR="base"
    export NAME="filereaderwriter"
    ;;
  "ft" )
    export DIR="lib"
    export NAME="filters"
    ;;
  "hb" | "hbackup" )
    export DIR="cli"
    export NAME="hbackup"
    ;;
  "hh" )
    export DIR="base"
