# Parameters:
#   1: a short name

# Export
#   1: the dir
#   2: the complete name

case $1 in
  "bf" )
    export DIR="base"
    export NAME="buffer"
    ;;
  "bzr" )
    export DIR="lib"
    export NAME="bzr_parser"
    ;;
  "cl" )
    export DIR="lib"
    export NAME="clients"
    ;;
  "cd" )
    export DIR="lib"
    export NAME="conditions"
    ;;
  "cf" )
    export DIR="base"
    export NAME="configuration"
    ;;
  "cvs" )
    export DIR="lib"
    export NAME="cvs_parser"
    ;;
  "dt" )
    export DIR="lib"
    export NAME="data"
    ;;
  "db" )
    export DIR="lib"
    export NAME="db"
    ;;
  "fl" )
    export DIR="base"
    export NAME="files"
    ;;
  "frw" )
    export DIR="base"
    export NAME="filereaderwriter"
    ;;
  "ft" )
    export DIR="lib"
    export NAME="filters"
    ;;
  "hb" | "hbackup" )
    export DIR="cli"
    export NAME="hbackup"
    ;;
  "hh" )
    export DIR="base"
    export NAME="hash"
    ;;
  "hw" | "hwbackup" )
    export DIR="cli"
    export NAME="hwbackup"
    ;;
  "in" )
    export DIR="lib"
    export NAME="interface"
    ;;
  "lk" )
    export DIR="lib"
    export NAME="lock"
    ;;
  "ls" )
    export DIR="lib"
    export NAME="list"
    ;;
  "ln" )
    export DIR="base"
    export NAME="line"
    ;;
  "ml" | "memleak" )
    export DIR="cli"
    export NAME="memleak"
    ;;
  "ow" )
    export DIR="lib"
    export NAME="owner"
    ;;
  "pr" )
    export DIR="lib"
    export NAME="parsers"
    ;;
  "pt" )
    export DIR="lib"
    export NAME="paths"
    ;;
  "rp" )
    export DIR="base"
    export NAME="report"
    ;;
  "svn" )
    export DIR="lib"
    export NAME="svn_parser"
    ;;
  * )
    export DIR="lib"
    export NAME="$1"
    ;;
esac

DIR="$WHERE/../$DIR"
