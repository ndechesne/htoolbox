# Parameters:
#   1: a short name

# Export the complete name

case $1 in
  "as" )
    export NAME="abstract_socket"
    ;;
  "aw" )
    export NAME="asyncwriter"
    ;;
  "cf" )
    export NAME="configuration"
    ;;
  "cp" )
    export NAME="copier"
    ;;
  "cr" )
    export NAME="criticality"
    ;;
  "fl" )
    export NAME="files"
    ;;
  "frw" )
    export NAME="filereaderwriter"
    ;;
  "hh" )
    export NAME="hasher"
    ;;
  "ht" )
    export NAME="hash_tree"
    ;;
  "is" )
    export NAME="inet_socket"
    ;;
  "ln" )
    export NAME="linereaderwriter"
    ;;
  "ob" )
    export NAME="observer"
    ;;
  "pm" )
    export NAME="process_mutex"
    ;;
  "rp" )
    export NAME="report"
    ;;
  "th" )
    export NAME="tlv_helper"
    ;;
  "tlv" )
    export NAME="tlv"
    ;;
  "tm" )
    export NAME="threads_manager"
    ;;
  "tme" )
    export NAME="threads_manager_extensive"
    ;;
  "us" )
    export NAME="unix_socket"
    ;;
  "zip" )
    export NAME="zipper"
    ;;
  * )
    export NAME="$1"
    ;;
esac

DIR=$WHERE/..
