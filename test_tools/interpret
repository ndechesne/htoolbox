# Parameters:
#   1: a short name

# Export
#   1: the dir
#   2: the complete name

case $1 in
  "as" )
    export DIR="base"
    export NAME="asyncwriter"
    ;;
  "be" )
    export DIR="backend"
    export NAME="hbackend"
    ;;
  "bf" )
    export DIR="base"
    export NAME="buffer"
    ;;
  "bzr" )
    export DIR="lib"
    export NAME="bzr_parser"
    ;;
